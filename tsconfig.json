{
    "compilerOptions": {
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react",
      "module": "ESNext",  
      "declaration": true,
      "declarationDir": "types",
      "sourceMap": true,
      "moduleResolution": "node",
      "emitDeclarationOnly": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "target": "es5",
      "noImplicitAny": false,
      "baseUrl": "./"
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
    ],
  }